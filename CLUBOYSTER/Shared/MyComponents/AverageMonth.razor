@using CLUBOYSTER.Data;
<div class="card shadow border-left-primary py-2">
    <div class="card-body">
        <div class="row align-items-center no-gutters">
            <div class="col mr-2">
                <div class="text-uppercase text-primary font-weight-bold text-xs mb-1 fw-bold"><span>Среднее месяц</span></div>
                <div class="text-dark font-weight-bold h5 mb-0 fw-bold"><span>₽@((owner as Owner).AverageMonth)</span></div>
            </div>
            <div class="col-auto"><i class="fas fa-calendar fa-2x text-gray-300"></i></div>
        </div>
    </div>
</div>

@code {
    private User? owner;

    protected override async Task OnInitializedAsync()
    {
        owner = MongoDb.FindOwner();
    }
}
